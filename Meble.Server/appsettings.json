{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },

  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning"
      }
    },

    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/app.log", // Ścieżka do pliku dziennika
          "rollingInterval": "Day", // Okres dziennego logowania
          "rollOnFileSizeLimit": true, // Automatyczne przewijanie logów po osiągnięciu limitu rozmiaru
          "fileSizeLimitBytes": 10485760, // Limit rozmiaru pliku (10 MB)
          "shared": true // Dzielony dostęp do pliku dziennika
        }
      }
    ]
  },

  "ConnectionStrings": {
